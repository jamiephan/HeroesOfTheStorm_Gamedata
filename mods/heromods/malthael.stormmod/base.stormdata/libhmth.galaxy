    libGame_gf_HeroDeathUpdateRespawnTimer(lv_player, 0.0);
    UIDisplayMessage(PlayerGroupAll(), c_messageAreaChat, StringExternal("Param/Value/lib_HMTH_1736E322"));
    return true;
